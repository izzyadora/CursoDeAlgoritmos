algoritmo "Soma"
// Solicitar dois números para o usuário e mostrar a soma entre eles.
var
   num1, num2, soma:inteiro
inicio
      escreval("Digite um número de 0 a 9")
      leia(num1)
      escreval("Digite agora outro número de 0 a 9")
      leia(num2)
      soma <- num1+num2
      escreval("A soma dos números é: ", soma)
fimalgoritmo